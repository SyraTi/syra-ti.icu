p {
  text-indent: 2em;
}
canvas#live2dCanvas{
  width: 300px
  height: 300px
}
@media (max-width: 767px){
  canvas#live2dCanvas {
    width: 200px
    height: 200px
  }
}
@media (prefers-color-scheme: dark) {
  .gitalk-container {
    .gt-container {
      .gt-header-preview,
      .gt-header-textarea,
      .gt-header-textarea:hover,
      .gt-comment-admin .gt-comment-content,
      .gt-comment-content {
        background-color: #3B3B3B;
      }

      .gt-comment-content:hover {
        box-shadow: none;
      }

      .gt-comment-body {
        color: var(--text-color) !important;
      }
    }
  }
}